# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /includes/*file                 controllers.Assets.at(path="/public", file)
#GET     /webjars/*file              controllers.WebJarAssets.at(file)

GET     /mappa              controllers.Application.mappa()

# JSONs
GET     /rivers/:e/:n/:s/:w             controllers.OverPassController.askForRiversOnMyScreen(e: Double, n: Double, s: Double, w: Double)
GET     /river/:e/:n/:s/:w              controllers.OverPassController.askForRiverGeoJSON(e: Double, n: Double, s: Double, w: Double)